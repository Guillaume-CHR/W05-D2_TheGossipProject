<% if @gossip.errors.any? %>
  <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">Damn it gerl ... you failed ...</h4>
      <p>Aww yeah, you successfully read this important alert message. This example text is going to run a bit longer so that you can see how spacing within an alert works with this kind of content.</p>
      <hr>
      <p class="mb-0">
          <ul>
          <% @gossip.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
          </ul>
      </p>
  </div>
<% end %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">The Gossip Project</h1>
    <p class="lead">Create here your new gossip little spider</p>
</div>

<div class="container">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <%= label_tag 'Gossip_title', nil, class: 'card text-white bg-primary text-left w-100 lead mb-0 p-1'%>
      <%= text_field_tag 'title', nil, style: 'width:100%'%>
      <br /> <br />

      <%= label_tag 'Body', nil, class: 'card text-white bg-primary text-left w-100 lead mb-0 p-1'%>
      <%= text_area_tag 'content', nil, rows: 10, style: 'width:100%'%>
      <br /> <br />

      <%= submit_tag "Create Gossip", class: 'btn btn-danger'%>

    <% end %>
</div>
